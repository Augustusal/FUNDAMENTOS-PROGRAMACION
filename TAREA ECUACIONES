#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "stdlib.h"

using namespace std;

void main(){
	float a,b,c,d,x1,x2; int salir, repetir;
	do{
	cout<<"Ingrese el valor de a: "<<endl;
	cin>>a;
	cout<<"Ingrese el valor de b: "<<endl;
	cin>>b;
	cout<<"Ingrese el valor de c "<<endl;
	cin>>c;
	cout<<endl;

	d=pow(b,2)-4*a*c;
	if(a!=0){
		if(d>0){
		x1=(-b+sqrt(pow(b,2)-4*a*c))/2*a;
		x2=(-b-sqrt(pow(b,2)-4*a*c))/2*a;
		cout<<"El valor x1 es: "<<x1<<endl;
		cout<<"El valor x2 es: "<<x2<<endl<<endl;
		}
		else
			if(d==0){
				x1=(-b+sqrt(pow(b,2)-4*a*c))/2*a;
				cout<<"X: "<<x1<<endl<<endl;
			}
			else
				if(d<0){
					cout<<"Valores imaginarios."<<endl<<endl;
				}
	}
	else
		cout<<"<<a>> es igual a 0"<<endl;
	cout<<"Ingrese 1 para volver al inicio, 0 para salir"<<endl;
	cin>>salir;
	getch();
	system("cls");
	}while(salir!=0);
}
